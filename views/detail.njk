<html>
<head>
    <title>Detail</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="/script.js"></script>
</head>
<body>
<div class="container-fluid">
    <div class="page-header"><h1 class="text-center">{{book.getTitle()}}</h1></div>
    <ul>
        <li> <a href="/">Home</a> </li>
    </ul>
    <form>
        <div class="form-group col-md-3">
            <label>Title</label>
            <input  hidden id="id" value="{{book.getId()}}">
            <br>
            <input class="form-control" name="title" id="title" value="{{book.getTitle()}}">
        </div>
        <div class="form-group col-md-3">
            <label>Author</label>
            <br>
            <input class="form-control" type="text" name="author" id="author" value="{{book.getAuthor()}}">
        </div>
        <div class="form-group col-md-1">
            <label>Publisher</label>
            <br>
            <select class="dropdown-header" id="publisher_id" name="publisher_id">
                {% for publisher in publishers %}
                {% if publisher.getId() === book.getPublisher().getId() %}
                <option value="{{publisher.getId()}}" selected>{{publisher.getId()}}</option>
                {% else %}
                <option value="{{publisher.getId()}}">{{publisher.getId()}}</option>
                {% endif %}
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-md-3">
            <label>Price</label>
            <br>
            <input class="form-control" type="number" name="price" id="price" value="{{book.getPrice()}}">
        </div>
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-success">Edit</button>
        </div>
    </form>
    <form action="/delete/:id" method="get">
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-success" id="delete">Delete</button>
            <div>
    </form>
</div>
</body>
</html>