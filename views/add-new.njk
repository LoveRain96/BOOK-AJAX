<html>
<head>
    <title>CREATE BOOK</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="/script.js"></script>
</head>
<body>
    <div class="page-header"><h1 class="text-center">Add Book</h1></div>
        <ul>
            <li> <button onclick="window.location.href='/'" >HOME</button> </li>
        </ul>
    <div class="container-fluid">
        <div class="col-md-6 col-md-offset-3">
            <form action="/">
                <div class="form-group col-md-12">
                    <label>Title</label>
                    <br>
                    <input class="form-control"  name="title" id="title" value="" placeholder="Enter Title...">
                    <p></p>
                </div>

                <div class="form-group col-md-12">
                    <label>Author</label>
                    <br>
                    <input class="form-control" type="text" name="author" id="author" value="" placeholder="Enter Author...">
                </div>
                <div class="form-group col-md-12">
                    <label>Publisher</label>
                    <br>
                    <select class="dropdown-header" id="publisher_id" name="publisher_id">
                        {% for publisher in publishers %}
                        <option value="{{publisher.getId()}}">{{publisher.getName()}}</option>
                        {% endfor %}
                    </select>
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <label>Price</label>
                    <br>
                    <input class="form-control" type="number" name="price" id="price" value="" placeholder="Enter Price...">
                </div>
                <div class="form-group col-md-2">
                    <button class="btn btn-default" id="post">ADD</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>